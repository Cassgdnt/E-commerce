{% extends 'base.html.twig' %}

{% block title %}Hello AdminController!{% endblock %}

{% block body %}
{% if is_granted('ROLE_SUPERADMIN') %}

<div class="UserListe">
    <h2>Liste des 10 derniers utilisateurs inscrits :</h2>
    {% for user in users %}
        <ul>
        <li>{{user.Nom}} {{user.Prenom}} / {{user.email}}</li>
        </ul>
    {% endfor %}
</div>
{% endif %}
{% endblock %}
