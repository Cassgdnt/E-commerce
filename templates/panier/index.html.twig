{% extends 'base.html.twig' %}

{% block title %}Panier index{% endblock %}

{% block body %}
    <h1>Liste des paniers</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Date d'achat</th>
                <th>Etat</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for panier in paniers %}
            <tr>
                <td>{{ panier.id }}</td>
                <td>{{ panier.DateAchat ? panier.DateAchat|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ panier.Etat ? 'Yes' : 'No' }}</td>
                <td>
                    <a href="{{ path('panier_show', {'id': panier.id}) }}">show</a>
                    <a href="{{ path('panier_edit', {'id': panier.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">Aucun panier </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('panier_new') }}">Cr√©er un nouveau panier</a>
{% endblock %}
