{% extends 'base.html.twig' %}

{% block title %}Accueil{% endblock %}

{% block body %}
    <h1>{{'Produit.Liste' |trans}}</h1>

    <table class="table">
        <thead>
            <tr>
                <th>{{'Produit.Nom' |trans}} </th>
                <th>{{'Produit.Description' |trans}} </th>
                <th>{{'Produit.Prix' |trans}} </th>
                <th>{{'Produit.Stock' |trans}} </th>
                <th>{{'Produit.Photo' |trans}} </th>
                
            </tr>
        </thead>
        <tbody>
        {% for produit in produits %}
            <tr>
                <td>{{ produit.id }}</td>
                <td><a href="{{path('produit_show', {'id':produit.id})}}">{{ produit.Nom }}</a></td>
                <td>{{ produit.Description }}</td>
                <td>{{ produit.Prix }}</td>
                <td>{{ produit.Stock }}</td>
                <td><img src="{{ asset('/uploads/' ~ produit.photo) }}"></td>
                
            </tr>
        {% else %}
            <tr>
                <td colspan="7">{{'Produit.Aucun' |trans}} </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% if is_granted('ROLE_ADMIN') %}
    <a href="{{ path('produit_new') }}">{{'Produit.Nouveau' |trans}} </a>
{% endif %}
{% endblock %}
