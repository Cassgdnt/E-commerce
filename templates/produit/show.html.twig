{% extends 'base.html.twig' %}

{% block title %}Produit{% endblock %}

{% block body %}
    <h1>Produit</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Nom</th>
                <td>{{ produit.Nom }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ produit.Description }}</td>
            </tr>
            <tr>
                <th>Prix</th>
                <td>{{ produit.Prix }} €</td>
            </tr>
            <tr>
                <th>Stock</th>
                <td>{{ produit.Stock }}</td>
            </tr>
            <tr>
                <th>Photo</th>
                <td><img src="{{ asset('/uploads/' ~ produit.photo) }}"></td>
            </tr>
            <tr>
        </tbody>
    </table>
    {% if is_granted('ROLE_USER') %}
<button class="btn btn-outline-success">Ajouter le produit au panier</button>
<br>
    {% endif %}
<button class="btn btn-outline-secondary"><a href="{{ path('produit_index') }}">Retour à la liste des produits</a></button>
{% if is_granted('ROLE_ADMIN') %}
    <button class="btn btn-outline-secondary">Editer le produit</button>
    {{ include('produit/_delete_form.html.twig') }}
{% endif %}


{% endblock %}
